= form_for user, :url => ( user.new_record? ? admin_users_path : admin_user_path(user) ), :html => { :class => 'form-horizontal', :multipart => true } do |f|
	= render :partial => 'shared/form_errors', :locals => { :object => user }
	
	.row-fluid
		.span4
			.control-group
				= f.label :email, :class => 'control-label'
				.controls
					= f.text_field :email, :placeholder => 'email'
			.control-group
				= f.label :password, :class => 'control-label'
				.controls
					= f.text_field :password, :autocomplete => "off"
			/ .control-group
			/ 	= f.label :password_confirmation, :class => 'control-label'
			/ 	.controls
			/ 		= f.text_field :password_confirmation
			= render :partial => 'role_select', :locals => { :f => f }
		.span4
			= f.fields_for :profile do |p|
				.control-group
					= p.label :name, :class => 'control-label'
					.controls
						= p.text_field :name
				.control-group
					= p.label :personal_id, 'Personal ID', :class => 'control-label'
					.controls
						= p.text_field :personal_id
				.control-group
					= p.label :phone_main, 'Main phone', :class => 'control-label'
					.controls
						= p.text_field :phone_main
				.control-group
					= p.label :phone_alternate, 'Alternate phone', :class => 'control-label'
					.controls
						= p.text_field :phone_alternate

	.form-actions
		= f.submit "Save User", :class => 'btn btn-success'
