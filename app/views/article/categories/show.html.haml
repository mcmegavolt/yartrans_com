.page-head
  .container
    .row
      .span12
        %h2= article_category.name
    .row    
      .span10
        %h4= article_category.description.html_safe
      .span2
        = image_tag article_category.icon_url(:medium)
.container
  .content.process
    .row
      - if article_category.children.present?
        - article_category.children.each_with_index do |sub, index|
          .span4
            .onethree-left
              = image_tag article_category.icon_url(:small)
              / .process-meta
              /   %span= index + 1
            .onethree-right
              %h4= sub.name
              %p= sub.description.truncate(150)
              %hr/
              - for page in sub.pages do
                %h6
                  %i.icon-double-angle-right.color
                  &nbsp;&nbsp;
                  = link_to page_path(page) do
                    = page.title
          - if ((index+1)%3).zero?
            .clearfix
    .row
      .span12.blog
        .posts
          .meta
            - if can? :edit, Article::Category
              = link_to edit_category_path(article_category) do
                %i.icon-pencil
                Edit
              &nbsp;
            - if can? :destroy, Article::Category 
              = link_to category_path(article_category), :confirm => 'Are you sure?', :method => :delete do
                %i.icon-trash
                Delete