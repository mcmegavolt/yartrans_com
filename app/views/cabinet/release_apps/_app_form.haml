= form_for release_app, :url => ( release_app.new_record? ? cabinet_release_apps_path : cabinet_release_app_path(release_app) ), :html => { :class => 'form-horizontal', :multipart => true } do |f|
	= render :partial => 'shared/form_errors', :locals => { :object => release_app }
	
	.row
		.span6
			.control-group
				= f.label :cargo_name, :class => 'control-label'
				.controls
					= f.text_field :cargo_name
			.control-group
				= f.label :code_number, :class => 'control-label'
				.controls
					= f.text_field :code_number
			.control-group
				= f.label :consignment, :class => 'control-label'
				.controls
					= f.text_field :consignment
			.control-group
				= f.label :additional_info, :class => 'control-label'
				.controls
					= f.text_area :additional_info, :rows => 5
		.span6
			.control-group
				= f.label :unit_id, t(:"applications.unit_types.label"), :class => 'control-label'
				.controls
					= f.select :unit_id, ReleaseApp::UNITS.collect{|u| [t(:"applications.unit_types.#{u}"), ReleaseApp::UNITS.index(u)]}, :prompt => '---'
			.control-group
				= f.label :unit_count, :class => 'control-label'
				.controls
					= f.number_field :unit_count, :class => 'span1'
			.control-group
				= f.label :in_box_count, :class => 'control-label'
				.controls
					= f.number_field :in_box_count, :class => 'span1'
			.control-group
				= f.label :box_count, :class => 'control-label'
				.controls
					= f.number_field :box_count, :class => 'span1'

	.form-actions
		= f.submit "Save App", :class => 'btn btn-success'
