%head
  %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %meta{"http-equiv"=>"X-UA-Compatible", :content=>"IE=edge,chrome=1"}/
  %meta{:charset => "utf-8"}/
  / Title and other stuffs
  = display_meta_tags :site => t(:'seo.meta.admin_site_name')#, :reverse => true
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  
  %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:400,600&subset=latin,cyrillic", :rel => "stylesheet", :type => "text/css"}/

  = stylesheet_link_tag 'admin/application'
  = javascript_include_tag 'admin/application'

  /[if lt IE 9]
    = javascript_include_tag 'html5shim'
  / Favicon
  %link{:href => "img/favicon/favicon.png", :rel => "shortcut icon"}/
  = csrf_meta_tags

%body
  = render 'admin/shared/navbar'
  = render 'admin/shared/header'
  = render 'admin/shared/sidebar'
  = yield
  = render 'admin/shared/footer'
  = render 'shared/flash_messages'
