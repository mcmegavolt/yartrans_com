/ Navigation
.navbar
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse
        %ul.nav
          - root_article_categories.each do |category|
            %li.dropdown
              = link_to '#', :class => 'dropdown-toggle', "data-toggle" => "dropdown" do
                = category.name
                %b.caret
              %ul.dropdown-menu
                - category.pages.each do |page|
                  %li
                    = link_to page, page_path(page)
          - static_article_pages.each do |static|
            %li
              = link_to static.title, page_path(static)